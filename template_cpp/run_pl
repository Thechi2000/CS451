clear

for id in $(seq 1 3); do
    config=
    if [ $id != 1 ]; then
        config=../example/configs/perfect-links.config
    fi

    unbuffer bin/da_proc --id $id --hosts ../example/hosts --output ../output/$id $config | sed -u -e "s/^/[PROCESS $id] /" &
done

trap "trap - SIGTERM && kill -- -$$" SIGINT SIGTERM EXIT

wait
